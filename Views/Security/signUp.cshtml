@{
    Layout = null;
    @model UsuarioModel
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro - Voto electrónico</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PC2_Views.styles.css" asp-append-version="true" />
</head>
<body>
<section class="vh-100" style="background-color: #F8F9FA;">

   <div class="container h-100">

        <div class="d-flex flex-column justify-content-center align-items-center h-100">
            <div class="bg-white border w-75 rounded-5 p-5">

                <div class="d-flex">
                    <div class="w-100">
                        <h1 class="mb-4 fw-bold text-center">Crear Cuenta</h1>
                    </div>

                </div>
                <form method="post" id="loginForm" action="~/Security/Login">
                    <div class="row">                        
                         <div class="form-group mb-3 col-lg-4">
                            <label class="label">Apellido Paterno</label> <input class="form-control" placeholder="Apellido Paterno" required="" name="paterno" id="txtLastname">
                        </div>
                         <div class="form-group mb-3 col-lg-4">
                            <label class="label">Apellido Materno</label> <input class="form-control" placeholder="Apellido Materno" required="" name="materno" id="txtLastname">
                        </div>
                         <div class="form-group mb-3 col-lg-4">
                            <label class="label">Nombres</label> <input class="form-control" placeholder="Ingrese nombres" required="" name="nombres" id="txtName">
                        </div>
                    </div>
                    <div class="row"> 
                        <div class="form-group mb-3 col-lg-6">
                            <label class="label">Correo electrónico</label> <input class="form-control" placeholder="Ingrese correo electrónico" required="" name="correo" id="txtEmail">

                        </div>
                         <div class="form-group mb-3 col-lg-6">
                            <label class="label">DNI</label> <input class="form-control" placeholder="Ingrese DNI" required="" name="dni" id="txtDNI">

                        </div>
                    </div>
                    <div class="row"> 
                        <div class="form-group mb-3 col-lg-6">
                            <label class="label">Teléfono</label> <input class="form-control" placeholder="Ingrese teléfono" required="" name="telefono" id="txtPhone">

                        </div>
                         <div class="form-group mb-3 col-lg-6">
                            <label class="label">Fecha de nacimiento</label> <input class="form-control" placeholder="Ingrese fecha de nacimiento" required="" name="fechaNacimiento" id="txtBirthdate">

                        </div>
                    </div>
                    <div class="row"> 
                        <div class="form-group mb-3 col-lg-6">
                            <label class="label">Dirección</label> <input class="form-control" placeholder="Ingrese dirección" required="" name="direccion" id="txtAddress">

                        </div>
                         <div class="form-group mb-3 col-lg-6">
                            <label class="label">Contraseña</label> <input class="form-control" placeholder="Ingrese contraseña" required="" name="clave" id="txtPassword">

                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" id="btnSubmit" class="form-control btn btn-primary">
                            Registrar
                        </button>
                    </div>

                </form>
                 <div class="pt-4 text-gray-400 ">¿Ya tienes cuenta?
								<a href="/security/login" class="link-primary"> Inicia sesión</a></div>
            </div>

        </div>
    </div>
</section>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
