@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #ACACAC;
            height: 100vh;
        }

        #login .container #login-row #login-column #login-box {
            margin-top: 120px;
            max-width: 470px;
            height: 400px;
            border: 12px solid #F7F7F7;
            background-color: #FFFFFF;
        }

            #login .container #login-row #login-column #login-box #login-form {
                padding: 20px;
            }

                #login .container #login-row #login-column #login-box #login-form #register-link {
                    margin-top: -85px;
                }
    </style>
</head>
<body>

    <div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <h3 class="text-center text-info">Iniciar sesión</h3>
                            <div class="input-contenedor">
                                <label for="Correo" class="text-info">Correo:</label><br>
                                <input type="email" id="iemail" class="form-control placeholder = "Email" />
                            </div>
                            <div class="input-contenedor">
                                <label for="NumeroDocumento" class="text-info">Numero de Documento:</label><br>
                                <input type="text" id="itext" class="form-control placeholder = "DNI" />
                            </div>
                            <div class="input-contenedor">
                                <label for="password" class="text-center text-info">Contraseña:</label><br>
                                <input type="password" id="ipass" class="form-control placeholder = "Contraseña" />
                            </div>
                            <div class="form-group">
                                <label for="remember-me" class="text-center text-info"><span>Recordar</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                                <input type="submit" name="submit" class="text-center btn btn-info btn-md" value="Ingresar">
                                <p>¿No tienes cuenta?<a class="link" href="/security/signUp">Registrate</a></p>
                            </div>
                        <div style="color:red;">@ViewBag.message</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
